# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================

# API URL for backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# Clerk URLs (optional - defaults shown)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# QIE Wallet Configuration (Official Mainnet)
# QIE has near-zero gas fees, so mainnet can be used for development
NEXT_PUBLIC_QIE_NETWORK=mainnet
NEXT_PUBLIC_QIE_RPC_URL=https://rpc-main1.qiblockchain.online/
NEXT_PUBLIC_QIE_CHAIN_ID=5656

# Optional: QIE API credentials (if required by QIE SDK)
# NEXT_PUBLIC_QIE_API_KEY=your_api_key_here
# NEXT_PUBLIC_QIE_SECRET_KEY=your_secret_key_here

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=
