# Environment Configuration
NODE_ENV=development

# Private Key (DO NOT COMMIT THIS TO VERSION CONTROL)
PRIVATE_KEY=your_private_key_here

# RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
TESTNET_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
INFURA_KEY=your_infura_project_key

# QIE SDK Configuration
QIE_API_KEY=your_qie_api_key
QIE_SECRET_KEY=your_qie_secret_key
QIE_NETWORK=testnet

# Server Configuration
PORT=3000
API_VERSION=v1

# Database (if needed)
DATABASE_URL=your_database_url

# Gas Configuration
GAS_LIMIT=500000
GAS_PRICE=20000000000

# Cross-Chain Configuration
BRIDGE_CONTRACT_ADDRESS=your_bridge_contract_address
YIELD_AGGREGATOR_ADDRESS=your_yield_aggregator_address
BRIDGE_PROTOCOL=wormhole # or chainbridge
WORMHOLE_CORE_ADDRESS=wormhole_core_on_this_chain
WORMHOLE_TOKEN_BRIDGE_ADDRESS=wormhole_token_bridge_on_this_chain
CHAINBRIDGE_BRIDGE_ADDRESS=chainbridge_bridge_on_this_chain
CHAINBRIDGE_HANDLER_ADDRESS=chainbridge_erc20_handler
REMOTE_CHAIN_ID=target_chain_id
REMOTE_WRAPPED_TOKEN_ADDRESS=wrapped_token_on_remote_chain
WRAPPED_TOKEN_NAME=Wrapped QIE
WRAPPED_TOKEN_SYMBOL=WQIE
WRAPPED_TOKEN_DECIMALS=18
